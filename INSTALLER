#!/bin/sh

# GitUp - INSTALLER

if [ ! $(whoami) = root ];then
	echo -e "\e[31;1mERROR:\e[0m"
	echo -e "\e[1mYou cannot install GitUp."
	echo -e "Check if you are the root user.\e[0m"
	echo -e "\e[31;1mERROR CODE: 0\e[0m"
	exit
else
	echo -e "\e[1m"
	echo -e "Installing...\e[0m"
	cp gitup /usr/bin/gitup
	echo -e "\e[1m"
	echo -e "Done!"
	echo -e "\e[0m"
fi
